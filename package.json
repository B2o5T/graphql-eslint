{
  "type": "module",
  "repository": "https://github.com/B2o5T/graphql-eslint",
  "author": "Dotan Simha <dotansimha@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc && bob build",
    "ci:lint": "eslint --ignore-path .gitignore --ext ts,js . --output-file eslint_report.json --format json",
    "create-rule": "tsx scripts/create-rule.ts",
    "generate:configs": "tsx scripts/generate-configs.ts",
    "generate:docs": "tsx scripts/generate-docs.ts",
    "lint": "eslint --ignore-path .gitignore --ext ts,js .",
    "postbuild": "cp -r README.md docs ./packages/plugin/dist/",
    "postinstall": "node scripts/patch-graphql.js",
    "prebuild": "rimraf packages/*/dist ./tsconfig.tsbuildinfo",
    "prerelease": "pnpm build",
    "prettier": "prettier --cache --write --list-different .",
    "release": "changeset publish",
    "test": "vitest ."
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@graphql-tools/utils": "^9.0.0",
    "@theguild/prettier-config": "1.0.0",
    "@types/dedent": "0.7.0",
    "@types/node": "18.11.17",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "bob-the-bundler": "4.1.1",
    "chalk": "^4.1.2",
    "dedent": "0.7.0",
    "enquirer": "2.3.6",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-eslint-plugin": "5.0.7",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "45.0.2",
    "husky": "8.0.2",
    "jest-snapshot-serializer-raw": "1.2.0",
    "json-schema-to-markdown": "1.1.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "tsx": "^3.12.1",
    "typescript": "4.9.4",
    "vitest": "0.26.2"
  },
  "resolutions": {
    "execa": "5.1.1",
    "graphql": "16.6.0"
  },
  "lint-staged": {
    "**/*": [
      "eslint",
      "prettier --write"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "eslint@8.30.0": "patches/eslint@8.28.0.patch",
      "eslint-plugin-eslint-plugin@5.0.7": "patches/eslint-plugin-eslint-plugin@5.0.6.patch",
      "json-schema-to-markdown@1.1.1": "patches/json-schema-to-markdown@1.1.1.patch",
      "vitest@0.26.2": "patches/vitest@0.26.2.patch"
    }
  }
}
