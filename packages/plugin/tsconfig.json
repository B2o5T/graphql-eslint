{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "node16",
    "declaration": false,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNext", "dom"],
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@graphql-eslint/eslint-plugin": ["./src/index.ts"]
    }
  },
  "exclude": ["dist"]
}
